<dataset>
    <variables>
        <variable>
            <name>${SDR}</name>
            <type>short</type>
            <segment_name>${segmentName}</segment_name>
            <dimensions>
                <id>OLCI</id>
            </dimensions>
            <attributes>
                <attribute>
                    <name>long_name</name>
                    <type>string</type>
                    <value>Surface directional reflectance for SYN channel ${i}</value>
                </attribute>
                <attribute>
                    <name>standard_name</name>
                    <type>string</type>
                    <value>surface_directional_reflectance</value>
                </attribute>
                <attribute>
                    <name>_FillValue</name>
                    <type>short</type>
                    <value>-10000</value>
                </attribute>
                <attribute>
                    <name>scale_factor</name>
                    <type>float</type>
                    <value>0.0001</value>
                </attribute>
                <attribute>
                    <name>valid_min</name>
                    <type>short</type>
                    <value>0</value>
                </attribute>
                <attribute>
                    <name>valid_max</name>
                    <type>short</type>
                    <value>10000</value>
                </attribute>
                <attribute>
                    <name>ancillary_variables</name>
                    <type>string</type>
                    <value>SDR_${i}_er</value>
                </attribute>
                <attribute>
                    <name>channel</name>
                    <type>ubyte</type>
                    <value>1</value>
                </attribute>
                <attribute>
                    <name>central_wavelength</name>
                    <type>float</type>
                    <value>${central_wavelength}</value>
                </attribute>
                <attribute>
                    <name>min_wavelength</name>
                    <type>float</type>
                    <value>${min_wavelength}</value>
                </attribute>
                <attribute>
                    <name>max_wavelength</name>
                    <type>float</type>
                    <value>${max_wavelength}</value>
                </attribute>
            </attributes>
        </variable>
        <variable>
            <name>${SDR_er}</name>
            <type>short</type>
            <segment_name>${segmentName}</segment_name>
            <dimensions>
                <id>OLCI</id>
            </dimensions>
            <attributes>
                <attribute>
                    <name>long_name</name>
                    <type>string</type>
                    <value>Surface directional reflectance standard error for SYN channel ${i}</value>
                </attribute>
                <attribute>
                    <name>standard_name</name>
                    <type>string</type>
                    <value>surface_directional_reflectance_standard_error</value>
                </attribute>
                <attribute>
                    <name>_FillValue</name>
                    <type>short</type>
                    <value>-10000</value>
                </attribute>
                <attribute>
                    <name>scale_factor</name>
                    <type>float</type>
                    <value>0.0001</value>
                </attribute>
                <attribute>
                    <name>valid_min</name>
                    <type>short</type>
                    <value>0</value>
                </attribute>
                <attribute>
                    <name>valid_max</name>
                    <type>short</type>
                    <value>10000</value>
                </attribute>
                <attribute>
                    <name>channel</name>
                    <type>ubyte</type>
                    <value>1</value>
                </attribute>
                <attribute>
                    <name>central_wavelength</name>
                    <type>float</type>
                    <value>${central_wavelength}</value>
                </attribute>
                <attribute>
                    <name>min_wavelength</name>
                    <type>float</type>
                    <value>${min_wavelength}</value>
                </attribute>
                <attribute>
                    <name>max_wavelength</name>
                    <type>float</type>
                    <value>${max_wavelength}</value>
                </attribute>
            </attributes>
        </variable>
    </variables>
    <global_attributes>
        <attribute>
            <name>dataset_name</name>
            <value>${dataset_name}</value>
            <type>string</type>
        </attribute>
    </global_attributes>
</dataset>