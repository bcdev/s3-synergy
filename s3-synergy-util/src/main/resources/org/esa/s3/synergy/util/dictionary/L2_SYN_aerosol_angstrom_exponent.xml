<dataset>
    <variables>
        <variable>
            <name>A550</name>
            <type>ubyte</type>
            <segment_name>${segmentName}</segment_name>
            <dimensions>
                <id>OLCI</id>
            </dimensions>
            <attributes>
                <attribute>
                    <name>long_name</name>
                    <type>string</type>
                    <value>Aerosol angstrom exponent at 550 nm</value>
                </attribute>
                <attribute>
                    <name>standard_name</name>
                    <type>string</type>
                    <value>aerosol_angstrom_exponent</value>
                </attribute>
                <attribute>
                    <name>_FillValue</name>
                    <type>ubyte</type>
                    <value>0</value>
                </attribute>
                <attribute>
                    <name>scale_factor</name>
                    <type>float</type>
                    <value>0.015</value>
                </attribute>
                <attribute>
                    <name>add_offset</name>
                    <type>float</type>
                    <value>-1.0</value>
                </attribute>
                <attribute>
                    <name>valid_min</name>
                    <type>ubyte</type>
                    <value>1</value>
                </attribute>
                <attribute>
                    <name>valid_max</name>
                    <type>ubyte</type>
                    <value>255</value>
                </attribute>
                <attribute>
                    <name>wavelength</name>
                    <type>float</type>
                    <value>550.0</value>
                </attribute>
            </attributes>
        </variable>
    </variables>
    <global_attributes>
        <attribute>
            <name>dataset_name</name>
            <value>${dataset_name}</value>
            <type>string</type>
        </attribute>
    </global_attributes>
</dataset>