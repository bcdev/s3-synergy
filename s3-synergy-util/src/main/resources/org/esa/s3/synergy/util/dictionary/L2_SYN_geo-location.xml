<dataset>
    <variables>
        <variable>
            <name>latitude</name>
            <type>int</type>
            <segment_name>${segmentName}</segment_name>
            <dimensions>
                <id>OLCI</id>
            </dimensions>
            <attributes>
                <attribute>
                    <name>long_name</name>
                    <type>string</type>
                    <value>DEM-corrected latitude</value>
                </attribute>
                <attribute>
                    <name>standard_name</name>
                    <type>string</type>
                    <value>latitude</value>
                </attribute>
                <attribute>
                    <name>units</name>
                    <type>string</type>
                    <value>degrees_north</value>
                </attribute>
                <attribute>
                    <name>scale_factor</name>
                    <type>float</type>
                    <value>0.000001</value>
                </attribute>
                <attribute>
                    <name>valid_min</name>
                    <type>int</type>
                    <value>-90000000</value>
                </attribute>
                <attribute>
                    <name>valid_max</name>
                    <type>int</type>
                    <value>90000000</value>
                </attribute>
            </attributes>
        </variable>
        <variable>
            <name>longitude</name>
            <type>int</type>
            <segment_name>${segmentName}</segment_name>
            <dimensions>
                <id>OLCI</id>
            </dimensions>
            <attributes>
                <attribute>
                    <name>long_name</name>
                    <type>string</type>
                    <value>DEM-corrected longitude</value>
                </attribute>
                <attribute>
                    <name>standard_name</name>
                    <type>string</type>
                    <value>longitude</value>
                </attribute>
                <attribute>
                    <name>units</name>
                    <type>string</type>
                    <value>degrees_east</value>
                </attribute>
                <attribute>
                    <name>scale_factor</name>
                    <type>float</type>
                    <value>0.000001</value>
                </attribute>
                <attribute>
                    <name>valid_min</name>
                    <type>int</type>
                    <value>-180000000</value>
                </attribute>
                <attribute>
                    <name>valid_max</name>
                    <type>int</type>
                    <value>180000000</value>
                </attribute>
            </attributes>
        </variable>
        <variable>
            <name>altitude</name>
            <type>short</type>
            <segment_name>${segmentName}</segment_name>
            <dimensions>
                <id>OLCI</id>
            </dimensions>
            <attributes>
                <attribute>
                    <name>long_name</name>
                    <type>string</type>
                    <value>DEM-corrected altitude</value>
                </attribute>
                <attribute>
                    <name>standard_name</name>
                    <type>string</type>
                    <value>altitude</value>
                </attribute>
                <attribute>
                    <name>units</name>
                    <type>string</type>
                    <value>meters</value>
                </attribute>
                <attribute>
                    <name>positive</name>
                    <type>string</type>
                    <value>up</value>
                </attribute>
                <attribute>
                    <name>valid_min</name>
                    <type>int</type>
                    <value>-1000</value>
                </attribute>
                <attribute>
                    <name>valid_max</name>
                    <type>int</type>
                    <value>9000</value>
                </attribute>
            </attributes>
        </variable>
    </variables>
    <global_attributes>
        <attribute>
            <name>dataset_name</name>
            <value>${dataset_name}</value>
            <type>string</type>
        </attribute>
    </global_attributes>
</dataset>