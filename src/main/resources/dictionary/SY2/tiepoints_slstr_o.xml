<dataset>
    <variables>
        <variable>
            <name>SLO_TP_lat</name>
            <type>int</type>
            <segment_name>SLO_TP</segment_name>
            <dimensions>
                <id>N_SLO_TP</id>
            </dimensions>
            <attributes>
                <attribute>
                    <name>standard_name</name>
                    <type>string</type>
                    <value>latitude</value>
                </attribute>
                <attribute>
                    <name>units</name>
                    <type>string</type>
                    <value>degrees_north</value>
                </attribute>
                <attribute>
                    <name>valid_min</name>
                    <type>int</type>
                    <value>-90</value>
                </attribute>
                <attribute>
                    <name>valid_max</name>
                    <type>int</type>
                    <value>90</value>
                </attribute>
            </attributes>
        </variable>
        <variable>
            <name>SLO_TP_lon</name>
            <type>double</type>
            <segment_name>SLO_TP</segment_name>
            <dimensions>
                <id>N_SLO_TP</id>
            </dimensions>
            <attributes>
                <attribute>
                    <name>standard_name</name>
                    <type>string</type>
                    <value>longitude</value>
                </attribute>
                <attribute>
                    <name>units</name>
                    <type>string</type>
                    <value>degrees_east</value>
                </attribute>
                <attribute>
                    <name>valid_min</name>
                    <type>int</type>
                    <value>-180</value>
                </attribute>
                <attribute>
                    <name>valid_max</name>
                    <type>int</type>
                    <value>180</value>
                </attribute>
            </attributes>
        </variable>
        <variable>
            <name>SLO_VAA</name>
            <type>float</type>
            <segment_name>SLO_TP</segment_name>
            <dimensions>
                <id>N_SLO_TP</id>
            </dimensions>
            <attributes>
                <attribute>
                    <name>long_name</name>
                    <type>string</type>
                    <value>SLSTR oblique view azimuth angle</value>
                </attribute>
                <attribute>
                    <name>units</name>
                    <type>string</type>
                    <value>degrees</value>
                </attribute>
                <attribute>
                    <name>valid_min</name>
                    <type>float</type>
                    <value>-180.0</value>
                </attribute>
                <attribute>
                    <name>valid_max</name>
                    <type>float</type>
                    <value>180.0</value>
                </attribute>
                <attribute>
                    <name>coordinates</name>
                    <type>string</type>
                    <value>SLO_TP_lat SLO_TP_lon</value>
                </attribute>
            </attributes>
        </variable>
        <variable>
            <name>SLO_VZA</name>
            <type>float</type>
            <segment_name>SLO_TP</segment_name>
            <dimensions>
                <id>N_SLO_TP</id>
            </dimensions>
            <attributes>
                <attribute>
                    <name>long_name</name>
                    <type>string</type>
                    <value>SLSTR oblique view zenith angle</value>
                </attribute>
                <attribute>
                    <name>units</name>
                    <type>string</type>
                    <value>degrees</value>
                </attribute>
                <attribute>
                    <name>valid_min</name>
                    <type>float</type>
                    <value>0.0</value>
                </attribute>
                <attribute>
                    <name>valid_max</name>
                    <type>float</type>
                    <value>90.0</value>
                </attribute>
                <attribute>
                    <name>coordinates</name>
                    <type>string</type>
                    <value>SLO_TP_lat SLO_TP_lon</value>
                </attribute>
            </attributes>
        </variable>
    </variables>
    <global_attributes>
        <attribute>
            <name>dataset_name</name>
            <value>tiepoints_slstr_o</value>
            <type>string</type>
        </attribute>
    </global_attributes>
