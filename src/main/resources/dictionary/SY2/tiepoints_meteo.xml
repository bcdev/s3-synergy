<dataset>
    <variables>
        <variable>
            <name>air_pressure</name>
            <segment_name>OLC_TP</segment_name>
            <type>float</type>
            <dimensions>
                <id>N_OLC_TP</id>
            </dimensions>
            <attributes>
                <attribute>
                    <name>long_name</name>
                    <type>string</type>
                    <value>Mean sea level pressure</value>
                </attribute>
                <attribute>
                    <name>standard_name</name>
                    <type>string</type>
                    <value>air_pressure_at_sea_level</value>
                </attribute>
                <attribute>
                    <name>units</name>
                    <type>string</type>
                    <value>hPa</value>
                </attribute>
                <attribute>
                    <name>_FillValue</name>
                    <type>float</type>
                    <value>-1.0</value>
                </attribute>
                <attribute>
                    <name>valid_min</name>
                    <type>float</type>
                    <value>850.0</value>
                </attribute>
                <attribute>
                    <name>valid_max</name>
                    <type>float</type>
                    <value>1100.0</value>
                </attribute>
                <attribute>
                    <name>coordinates</name>
                    <type>string</type>
                    <value>OLC_TP_lat OLC_TP_lon</value>
                </attribute>
            </attributes>
        </variable>
        <variable>
            <name>ozone</name>
            <segment_name>OLC_TP</segment_name>
            <type>float</type>
            <dimensions>
                <id>N_OLC_TP</id>
            </dimensions>
            <attributes>
                <attribute>
                    <name>long_name</name>
                    <type>string</type>
                    <value>Total column ozone</value>
                </attribute>
                <attribute>
                    <name>standard_name</name>
                    <type>string</type>
                    <value>atmosphere_mass_content_of_ozone</value>
                </attribute>
                <attribute>
                    <name>units</name>
                    <type>string</type>
                    <value>kg m-2</value>
                </attribute>
                <attribute>
                    <name>_FillValue</name>
                    <type>float</type>
                    <value>-1.0</value>
                </attribute>
                <attribute>
                    <name>valid_min</name>
                    <type>float</type>
                    <value>0.0</value>
                </attribute>
                <attribute>
                    <name>valid_max</name>
                    <type>float</type>
                    <value>-1.0</value>
                    <!-- dummy value -->
                </attribute>
                <attribute>
                    <name>coordinates</name>
                    <type>string</type>
                    <value>OLC_TP_lat OLC_TP_lon</value>
                </attribute>
            </attributes>
        </variable>
        <variable>
            <name>water_vapour</name>
            <segment_name>OLC_TP</segment_name>
            <type>float</type>
            <dimensions>
                <id>N_OLC_TP</id>
            </dimensions>
            <attributes>
                <attribute>
                    <name>long_name</name>
                    <type>string</type>
                    <value>Total column water vapour</value>
                </attribute>
                <attribute>
                    <name>standard_name</name>
                    <type>string</type>
                    <value>atmosphere_water_vapour_content</value>
                </attribute>
                <attribute>
                    <name>units</name>
                    <type>string</type>
                    <value>g m-2</value>
                </attribute>
                <attribute>
                    <name>_FillValue</name>
                    <type>float</type>
                    <value>-1.0</value>
                </attribute>
                <attribute>
                    <name>valid_min</name>
                    <type>float</type>
                    <value>0.0</value>
                </attribute>
                <attribute>
                    <name>valid_max</name>
                    <type>float</type>
                    <value>-1.0</value>
                    <!-- dummy value -->
                </attribute>
                <attribute>
                    <name>coordinates</name>
                    <type>string</type>
                    <value>OLC_TP_lat OLC_TP_lon</value>
                </attribute>
            </attributes>
        </variable>
    </variables>
    <global_attributes>
        <attribute>
            <name>dataset_name</name>
            <value>tiepoints_meteo</value>
            <type>string</type>
        </attribute>
    </global_attributes>
</dataset>
