            <value>${title}</value> <!-- needs to be set at runtime, e.g. to 'B0 TOA Reflectance' -->
            <type>string</type>
        </attribute>
        <attribute>
            <name>institution</name>
            <value>TBD</value>
            <type>string</type>
        </attribute>
        <attribute>
            <name>source</name>
            <value>Sentinel-3A SY</value>
            <type>string</type>
        </attribute>
        <attribute>
            <name>history</name>
            <value>TBD</value>
            <type>string</type>
        </attribute>        
        <attribute>
            <name>comment</name>
            <value>${comment}</value> <!-- needs to be set at runtime e.g. to 'This dataset contains the B0 TOA reflectance variable.' -->
            <type>string</type>
        </attribute>
        <attribute>
            <name>references</name>
            <value>ATBD: S3-L2-SD-03-S2-SU-ATBD, IODD: S3-L2-SD-08-S-BC-IODD</value>
