			<attribute>
				<name>scale_factor</name>
				<type>float</type>
				<value>0.001</value>
			</attribute>			
			<attribute>
				<name>valid_min</name>
				<type>short</type>
				<value>0</value>
			</attribute>
			<attribute>
				<name>valid_max</name>
				<type>short</type>
				<value>10000</value>
			</attribute>
			<attribute>
				<name>central_wavelength</name>
				<type>float</type>
				<value>450</value>
			</attribute>
			<attribute>
				<name>min_wavelength</name>
				<type>float</type>
				<value>430</value>
			</attribute>
			<attribute>
				<name>max_wavelength</name>
				<type>float</type>
				<value>470</value>
			</attribute>
			<attribute>
				<name>grid_mapping</name>
				<type>string</type>
				<value>crs</value>
			</attribute>			
		</attributes>
	</variable>
</variables>
<global_attributes>
	<attribute>
		<name>dataset_name</name>
		<value>VGT_P_B0_TOA_reflectance</value>
		<type>string</type>
	</attribute>	
</global_attributes>
</dataset>